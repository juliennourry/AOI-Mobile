<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemActivity">

    <WebView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asc Parking"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingRight="15dp"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/icon_item_info"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-20dp"
                app:tint="@color/white"
                android:src="@drawable/ic_baseline_arrow_right_24"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/theme_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiers : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:id="@+id/label_tiers_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Société xyz"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Site : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:id="@+id/label_site_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carré Azalée"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 rue chemin Azalée"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catégorie : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:id="@+id/label_category_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ascenseur"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type d'appareil : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cabine intérieure"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mise en service : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:id="@+id/label_dateservice_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 Janvier 2023"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Etat : "
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/theme_color"/>

                    <TextView
                        android:id="@+id/label_status_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En ligne"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_layout_item" />






</LinearLayout>